{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "root": true,
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended", 
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "project": "./tsconfig.json",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-useless-constructor": "off"
    }
}


