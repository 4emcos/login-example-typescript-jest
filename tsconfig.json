{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["ES6"],                                        
    "module": "commonjs",                                
    "resolveJsonModule": true,                        
    "allowJs": true,              
    "baseUrl": "./src",                    
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true                    
  }
}
